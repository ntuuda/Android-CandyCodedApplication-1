<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pluralsight.candycoded.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/candy_coded" />

    <Button
        android:id="@+id/LaunchMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alighnParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alighParentTop="true"
        android:layout_marginTop="6dp"
        android:layout_marginButtom="6dp"
        android:onClick="process"
        android:text="Launch Map"/>

    <Button
        android:layout_width="wrap content"
        android:layout_height="wrap content"
        android:text="Dial"
        android:id="@+Id/btn"
        android:onClick="onDialButton"/>

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/activity_padding"
        android:text="@string/products_title"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/list_view_candy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_padding" />

</LinearLayout>
